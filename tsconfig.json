{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
        "ES2022",
        "DOM"        
    ],
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
